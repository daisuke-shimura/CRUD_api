{
  "name": "rails-api-dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "web",
  "workspaceFolder": "/app",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "rebornix.Ruby",
    "castwide.solargraph"
  ],
  "containerEnv": {
    "DISABLE_SPRING": "1"
  },
  "postCreateCommand": "bundle install || true"
}
